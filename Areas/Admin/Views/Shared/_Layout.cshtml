<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PE2022test</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PE2022test.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg px-2 navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PE2022test</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav" id="navigation_bar">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="BookIndex">Home</a>
                        </li>
                        <!-- Dropdown -->
                        <li class="nav-item dropdown">
                           <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                           Info
                           </a>
                           <div class="dropdown-menu">
                              <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="UserIndex">Users</a>
                              <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="AuthorIndex">Author</a>
                              <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="Book_AuthorIndex">Book_Author</a>
                              <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="LeaseIndex">Lease</a>
                              <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="FineIndex">Fine</a>
                              <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="PaymentIndex">Bill</a>
                              <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="ReviewIndex">Reviews Books</a>
                              
                           </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Privacy</a>
                        </li>
                    </ul>
                 </div> 
                 <form asp-action="Search">
                        @using (Html.BeginForm("Search","Admin",FormMethod.Get)) // -- phần thay đổi
                        {
                        <p>
                            Title: @Html.TextBox("search") <input type="submit" value="Tìm kiếm" />
                        </p>
                        }
                        <!-- Kết thúc -->
                 </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - PE2022test - <a asp-area="Admin" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/9bc94d0d27.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
