@model PE2022test.Models.Lease

@{  
    ViewData["Title"] = "Edit";  
}  
<h2>Edit</h2>  
<h4>Lease</h4>  
<hr />  
<div class="row">  
    <div class="col-md-4">  
        <form asp-action="LeaseEdit">  
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
            <input type="hidden" asp-for="SessionID" />  
            <div class="form-group">  
                <label asp-for="Book_ID" class="control-label"></label>  
                <input asp-for="Book_ID" class="form-control" />  
                <span asp-validation-for="Book_ID" class="text-danger"></span>  
            </div>  
            <div class="form-group">  
                <label asp-for="ISSN" class="control-label"></label>  
                <input asp-for="ISSN" class="form-control" />  
                <span asp-validation-for="ISSN" class="text-danger"></span>  
            </div>  
            <div class="form-group">  
                <label asp-for="Lease_date" class="control-label"></label>  
                <input asp-for="Lease_date" class="datetime" />  
                <span asp-validation-for="Lease_date" class="text-danger"></span>  
            </div>  
            <div class="form-group">  
                <label asp-for="Expiry_date" class="control-label"></label>  
                <input asp-for="Expiry_date" class="datetime" />  
                <span asp-validation-for="Expiry_date" class="text-danger"></span>  
            </div>   
            <div class="form-group">  
                <label asp-for="Status" class="control-label"></label>  
                <input asp-for="Status" class="form-control" />  
                <span asp-validation-for="Status" class="text-danger"></span>  
            </div>  
            <div class="form-group">  
                <input type="submit" value="Save" class="btn btn-default" />  
            </div>  
        </form>  
    </div>  
</div>  
<div>  
    <a asp-action="LeaseIndex">Back to List</a>  
</div>  
@section Scripts {  
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}