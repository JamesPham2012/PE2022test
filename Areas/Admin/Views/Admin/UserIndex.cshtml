@model IEnumerable<PE2022test.Models.User>  
     
@{  
        ViewData["Title"] = "Thư viện của những chú bé";  
    }  
<h2>USERS</h2>  
<p>  
    
</p>  
<table class="table">  
    <thead>  
        <tr>  
            <th>  
                @Html.DisplayNameFor(model => model.ISSN)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.Name)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.Email)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.Address)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.Phone)  
            </th>  
            <th></th>  
        </tr>  
    </thead>  
    <tbody>  
        @foreach (var item in Model)  
{  
            <tr>  
                <th>  
                @Html.DisplayFor(modelItem => item.ISSN)  
                </th>  
                <th>  
                    @Html.DisplayFor(model => item.Name)  
                </th>  
                <th>  
                    @Html.DisplayFor(model => item.Email)  
                </th>  
                <th>  
                    @Html.DisplayFor(model => item.Address)  
                </th>  
                <th>  
                    @Html.DisplayFor(model => item.Phone)  
                </th>  
                <td>  
                    <a asp-action="UserEdit" asp-route-id="@item.ISSN">Edit</a> |  
                    <a asp-action="UserDetails" asp-route-id="@item.ISSN">Details</a> |  
                    <a asp-action="UserDelete" asp-route-id="@item.ISSN">Delete</a>  
                </td>  
            </tr>  
        }  
    </tbody>  
</table>

<div>  
    <a asp-action="UserCreate">To create a new user</a>  
</div>  